<resources>

    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
    <!--  <item name="android:windowLightStatusBar">true</item> -->
     <item name="colorPrimaryDark">@color/RcmoWhiteBG</item>
 </style>


 <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
     <item name="android:background">@color/black_overlay</item>
 </style>


 <!-- Font Style-->
    <style name="RCMOStatusBarFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorRcmoWhiteFont</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">15sp</item>
        <item name="android:paddingBottom">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RCMOHeaderFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorRcmoWhiteFont</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="RCMOHeaderFont.LargeText">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="RCMOHeaderFont.Green">
        <item name="android:textColor">@color/colorRcmoGreenFont</item>
    </style>

    <style name="RCMOHeaderFont.appbar">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="RCMOSubHeaderFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorRcmoWhiteFont</item>
        <item name="android:textColorHint">@color/colorRcmoGreenFont</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="RCMOTabFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorRcmoTabFont</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="RCMOSubHeaderFont.Green">
        <item name="android:textColor">@color/colorRcmoGreenFont</item>
    </style>

    <style name="RCMOSubHeaderFont.Gray">
        <item name="android:textColor">@color/colorRcmoGrayFont</item>
    </style>

    <style name="RCMODetailFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorRcmoWhiteFont</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="RCMODetailFont.Green">
        <item name="android:textColor">@color/colorRcmoGreenFont</item>
    </style>

    <style name="RCMODetailFont.Gray">
        <item name="android:textColor">@color/colorRcmoGrayFont</item>
    </style>

    <!--Input text -->
    <style name="RCMOInputText">
        <item name="android:background">@drawable/edit_border_text_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <!--    <item name="android:layout_weight">0.1</item> -->
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColorHint">@color/colorRcmoGrayFont</item>
        <item name="android:textColor">@color/colorRcmoGreenFont</item>
    </style>

    <style name="RCMOInputText.GrayFont">
        <item name="android:textColor">@color/colorRcmoGrayFont</item>
    </style>
    <!--Button -->
    <style name="RCMOButton">
        <item name="android:background">@drawable/button_view</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textAppearance">@style/RCMOSubHeaderFont.Green</item>
    </style>

    <style name="RCMOButton.orange">
        <item name="android:background">@drawable/button_orange_view</item>
        <item name="android:textAppearance">@style/RCMOSubHeaderFont</item>
    </style>

    <style name="RCMOButton.green">
        <item name="android:background">@drawable/button_green_view</item>
        <item name="android:textAppearance">@style/RCMOSubHeaderFont</item>
    </style>

    <style name="RCMOButton.selected">
        <item name="android:background">@drawable/button_selected_view</item>
        <item name="android:textAppearance">@style/RCMOSubHeaderFont.Green</item>
    </style>

    <style name="RCMOButton.unselected">
        <item name="android:background">@drawable/button_view</item>
        <item name="android:textAppearance">@style/RCMOSubHeaderFont.Gray</item>
    </style>
    <!--
    android:id="@+id/button"

    android:maxWidth="300dp"

    android:background="@android:color/holo_orange_dark"
    android:layout_marginTop="10dp" />
    -->

</resources>
