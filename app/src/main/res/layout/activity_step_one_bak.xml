<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainStepOneLayout"

   >



   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <com.neopixl.pixlui.components.textview.TextView
           pixlui:typeface="Quark-Bold.otf"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="กลุ่มสินค้า"
           android:layout_alignParentTop="true"
           android:gravity="center|top"
           android:padding="12dp"
           android:id="@+id/titleLable"
           android:textColor="@color/RcmoNormalLightText"
           android:textSize="@dimen/textsize_xxxlarge" />


       <com.neopixl.pixlui.components.textview.TextView
           pixlui:typeface="Quark-Bold.otf"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="&lt; กลับ"
           android:layout_alignParentLeft="true"
           android:id="@+id/backBtn"
           android:layout_marginTop="15dp"
           android:layout_marginLeft="10dp"
           android:textColor="@color/RcmoNormalLightText"
           android:textSize="@dimen/textsize_xxlarge" />


       <ImageView
           android:layout_width="@dimen/size_howto"
           android:layout_height="@dimen/size_howto"
           android:src="@drawable/btn_howto"
           android:layout_alignParentRight="true"
           android:id="@+id/btnQuestion"
           android:layout_margin="10dp"/>


   </RelativeLayout>


   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/RcmoStepTabTranBG"
       >
       <RelativeLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_marginLeft="50dp"
           android:layout_marginRight="50dp"

           >


           <View
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/RcmoLineTabBG"
               android:id="@+id/vertical_divider2"
               android:layout_centerVertical="true"
               android:layout_alignParentStart="true" />
           <ImageView
               android:layout_width="80dp"
               android:layout_height="wrap_content"
               android:id="@+id/step1_ac"
               android:src="@drawable/step1_ac"
               android:layout_centerVertical="true"
               android:layout_alignParentStart="true" />
           <ImageView
               android:layout_width="80dp"
               android:layout_height="wrap_content"
               android:id="@+id/step2"
               android:src="@drawable/step2"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true" />

           <ImageView
               android:layout_width="80dp"
               android:layout_height="wrap_content"
               android:id="@+id/step3"
               android:src="@drawable/step3"
               android:layout_centerVertical="true"
               android:layout_alignParentEnd="true" />

       </RelativeLayout>



   </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="200dp"
            android:adjustViewBounds="true"
            android:layout_height="300dp"
            android:id="@+id/imageView2"
            android:background="@drawable/circle"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="60dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_gravity="left"
            android:gravity="left|center"
            android:layout_marginStart="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:id="@+id/ic_bg_g1"
                android:orientation="vertical"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:gravity="center"
                android:background="@drawable/action_plant_ic_gr_circle"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/plantImg"
                    android:layout_height="@dimen/iccircle_img_height"
                    android:layout_width="@dimen/iccircle_img_width"

                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center">

                <com.neopixl.pixlui.components.textview.TextView
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="กลุ่มพืช"
                    android:gravity="center"
                    android:id="@+id/ic_label_g1"
                    android:textColor="@color/RcmoNormalLightText"
                    android:textSize="22sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="400dp"
            android:layout_gravity="left"
            android:gravity="left|center"
            android:layout_below="@+id/linearLayout"
            android:layout_marginStart="120dp"
            android:layout_marginTop="32dp">
            <LinearLayout
                android:id="@+id/ic_bg_g2"
                android:orientation="vertical"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:gravity="center"
                android:background="@drawable/action_animal_ic_gr_circle"
                android:clickable="true"
                android:focusable="true"
                >

                <ImageView
                    android:id="@+id/animalImg"
                    android:layout_height="@dimen/iccircle_img_height"
                    android:layout_width="@dimen/iccircle_img_width"

                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center">

                <com.neopixl.pixlui.components.textview.TextView
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="กลุ่มสัตว์"
                    android:gravity="center"
                    android:id="@+id/ic_label_g2"
                    android:textColor="@color/RcmoNormalLightText"
                    android:textSize="22sp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_gravity="left"
            android:gravity="left|center"
            android:layout_below="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_marginTop="164dp">

            <LinearLayout
                android:id="@+id/ic_bg_g3"
                android:orientation="vertical"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:gravity="center"
                android:background="@drawable/action_fish_ic_gr_circle"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/fishImg"
                    android:layout_height="@dimen/iccircle_img_height"
                    android:layout_width="@dimen/iccircle_img_width"

                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center">

                <com.neopixl.pixlui.components.textview.TextView
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="กลุ่มประมง"
                    android:gravity="center"
                    android:id="@+id/ic_label_47"
                    android:textColor="@color/RcmoNormalLightText"
                    android:textSize="22sp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
