<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/transFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/borderFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@color/RcmoOrangeBG">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/suggessScrollView" >

                <RelativeLayout
                    android:id="@+id/suggess_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/RcmoWhiteBG">

                    <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/txSuggession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="พื้นที่เหมาะสมสำหรับ...."
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/black"
                        pixlui:typeface="Quark-Bold.otf" />

                    <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/txRecommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txSuggession"
                        android:layout_below="@+id/txSuggession"
                        android:layout_marginTop="10dp"
                        android:text="สัตว์ที่ควรเลี้ยงคือ"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/RcmoGrayBG"
                        pixlui:typeface="Quark-Bold.otf" />

                    <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/txRecommendProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txRecommend"
                        android:layout_below="@+id/txRecommend"
                        android:text="สัตว์ที่ควรเลี้ยงคือ"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/RcmoGrayBG"
                        pixlui:typeface="Quark-Bold.otf" />

                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="false"
        android:layout_gravity="top|right"
        android:layout_marginRight="50dp"
        android:src="@drawable/ic_triangle_arrow"
        android:layout_alignParentRight="true" />

</RelativeLayout>
