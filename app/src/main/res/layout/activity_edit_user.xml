<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:id="@+id/mainEditUserLayout"
    tools:context="th.co.rcmo.rcmoapp.EditUserActivity">



    <com.neopixl.pixlui.components.textview.TextView
        pixlui:typeface="Quark-Bold.otf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="แก้ใขข้อมูลผู้ใช้งาน"
        android:layout_alignParentTop="true"
        android:gravity="center|top"
        android:padding="12dp"
        android:id="@+id/titleLable"
        android:textColor="@color/RcmoNormalLightText"
        android:textSize="@dimen/textsize_xxxlarge" />


    <com.neopixl.pixlui.components.textview.TextView
        pixlui:typeface="Quark-Bold.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt; กลับ"
        android:layout_alignParentLeft="true"
        android:id="@+id/backBtn"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/RcmoNormalLightText"
        android:textSize="@dimen/textsize_xxlarge" />


    <ImageView
        android:layout_width="@dimen/size_howto"
        android:layout_height="@dimen/size_howto"
        android:src="@drawable/btn_howto"
        android:id="@+id/btnHowto"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/white_trans_cut_conner"
                    android:padding="20dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.neopixl.pixlui.components.textview.TextView
                            pixlui:typeface="Quark-Light.otf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_normal"
                            android:text="ชื่อ"
                            android:textColor="@color/RcmoNormalLightText"
                            android:gravity="right"
                            android:padding="5dp"
                            android:layout_weight="3"
                            android:inputType="text"
                            android:textSize="@dimen/textsize_normal"
                            android:id="@+id/labelName"/>

                        <com.neopixl.pixlui.components.edittext.EditText
                            pixlui:typeface="Quark-Light.otf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_normal"
                            android:hint="ชื่อ"
                            android:textColor="@color/RcmoNormalDarkText"
                            android:textColorHint="@color/RcmoHintText"
                            android:background="@color/RcmoWhiteBG"
                            android:gravity="left"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:textSize="@dimen/textsize_normal"
                            android:textCursorDrawable="@drawable/text_cursor"
                            android:id="@+id/inputName"/>


                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.neopixl.pixlui.components.textview.TextView
                            pixlui:typeface="Quark-Light.otf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_normal"
                            android:text="นามสกุล"
                            android:textColor="@color/RcmoNormalLightText"
                            android:gravity="right"
                            android:padding="5dp"
                            android:layout_weight="3"
                            android:inputType="text"
                            android:textSize="@dimen/textsize_normal"
                            android:id="@+id/labelSirName"/>

                        <com.neopixl.pixlui.components.edittext.EditText
                            pixlui:typeface="Quark-Light.otf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_normal"
                            android:hint="นามสกุล"
                            android:textColor="@color/RcmoNormalDarkText"
                            android:textColorHint="@color/RcmoHintText"
                            android:background="@color/RcmoWhiteBG"
                            android:gravity="left"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:textSize="@dimen/textsize_normal"
                            android:textCursorDrawable="@drawable/text_cursor"
                            android:id="@+id/inputSirName"/>


                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.neopixl.pixlui.components.textview.TextView
                            pixlui:typeface="Quark-Light.otf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_large"
                            android:text="ชื่อบัญชี"
                            android:textColor="@color/RcmoNormalLightText"
                            android:gravity="right"
                            android:padding="5dp"
                            android:layout_weight="3"
                            android:inputType="text"
                            android:textSize="@dimen/textsize_normal"
                            android:id="@+id/labelUsername"/>

                        <com.neopixl.pixlui.components.textview.TextView
                            pixlui:typeface="Quark-Light.otf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_large"
                            android:hint="ชื่อบัญชี"
                            android:textColor="@color/RcmoNormalLightText"
                            android:textColorHint="@color/RcmoHintText"
                            android:background="@color/RcmoLightTranBG"
                            android:gravity="left"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:imeOptions="actionNext"
                            android:textSize="@dimen/textsize_normal"
                            android:textCursorDrawable="@drawable/text_cursor"
                            android:id="@+id/inputUsername"/>


                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.neopixl.pixlui.components.textview.TextView
                            pixlui:typeface="Quark-Light.otf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_normal"
                            android:text="อีเมล์"
                            android:textColor="@color/RcmoNormalLightText"
                            android:gravity="right"
                            android:padding="5dp"
                            android:layout_weight="3"
                            android:inputType="text"
                            android:textSize="@dimen/textsize_normal"
                            android:id="@+id/labelEmail"/>

                        <com.neopixl.pixlui.components.edittext.EditText
                            pixlui:typeface="Quark-Light.otf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_normal"
                            android:hint="อีเมล์"
                            android:imeOptions="actionDone"
                            android:textColor="@color/RcmoNormalDarkText"
                            android:textColorHint="@color/RcmoHintText"
                            android:textCursorDrawable="@drawable/text_cursor"
                            android:background="@drawable/white_cut_conner_valid"
                            android:gravity="left"
                            android:padding="5dp"
                            android:inputType="textEmailAddress"
                            android:layout_weight="1"


                            android:textSize="@dimen/textsize_normal"
                            android:id="@+id/inputEmail"/>


                    </LinearLayout>

                    <com.neopixl.pixlui.components.textview.TextView
                        pixlui:typeface="Quark-Bold.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/textsize_xxxlarge"
                        android:text="บันทึก"
                        android:textColor="@color/RcmoWhiteBG"
                        android:background="@drawable/action_orange_cut_conner"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textSize="@dimen/textsize_normal"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/btnSave"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">


                        <com.neopixl.pixlui.components.textview.TextView
                            pixlui:typeface="Quark-Bold.otf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="15dp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_normal"
                            android:text="@string/change_pass_text_btn"
                            android:textColor="@color/RcmoWhiteBG"
                            android:gravity="center"
                            android:padding="5dp"
                            android:onClick="actionToRegisterActivity"
                            android:textSize="@dimen/textsize_normal"
                            android:id="@+id/textLinkChangePass"/>


                        <com.neopixl.pixlui.components.textview.TextView
                            pixlui:typeface="Quark-Bold.otf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="15dp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_normal"
                            android:text="@string/logout_text_btn"
                            android:textColor="@color/RcmoWhiteBG"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textSize="@dimen/textsize_normal"
                            android:id="@+id/textLinkLogout"/>

                    </LinearLayout>
