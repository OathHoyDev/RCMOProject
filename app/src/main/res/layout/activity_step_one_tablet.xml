<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:id="@+id/mainStepOneLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/titleLable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center|top"
            android:padding="12dp"
            android:text="กลุ่มสินค้า"
            android:textColor="@color/RcmoNormalLightText"
            android:textSize="@dimen/textsize_xxxlarge"
            pixlui:typeface="Quark-Bold.otf" />


        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="&lt; กลับ"
            android:textColor="@color/RcmoNormalLightText"
            android:textSize="@dimen/textsize_xxlarge"
            pixlui:typeface="Quark-Bold.otf" />


        <ImageView
            android:id="@+id/btnHowto"
            android:layout_width="@dimen/size_howto"
            android:layout_height="@dimen/size_howto"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/btn_howto" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/RcmoStepTabTranBG"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal"

            >


            <View
                android:id="@+id/vertical_divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@color/RcmoLineTabBG" />

            <ImageView
                android:id="@+id/step1_ac"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/step1_ac" />

            <ImageView
                android:id="@+id/step2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/step2" />

            <ImageView
                android:id="@+id/step3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/step3" />

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/lineCircle"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circle" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:gravity="left|center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/grPlantBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/bringPlantImage"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:scaleType="centerInside" />

                <LinearLayout
                    android:id="@+id/ic_bg_g1"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/action_plant_ic_gr_circle"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/plantImg"
                        android:layout_width="@dimen/iccircle_img_width"
                        android:layout_height="@dimen/iccircle_img_height"

                        />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/ic_label_g1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="กลุ่มพืช"
                    android:textColor="@color/RcmoNormalLightText"
                    android:textSize="22sp"
                    pixlui:typeface="Quark-Bold.otf" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_gravity="left"
            android:layout_marginStart="0dp"
            android:layout_marginTop="100dp"
            android:gravity="left|center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/grAnimalBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/bringAnimalImage"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:scaleType="centerInside"

                    />

                <LinearLayout
                    android:id="@+id/ic_bg_g2"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/action_animal_ic_gr_circle"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/animalImg"
                        android:layout_width="@dimen/iccircle_img_width"
                        android:layout_height="@dimen/iccircle_img_height"

                        />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/ic_label_g2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="กลุ่มสัตว์"
                    android:textColor="@color/RcmoNormalLightText"
                    android:textSize="22sp"
                    pixlui:typeface="Quark-Bold.otf" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_gravity="left"
            android:layout_marginStart="0dp"
            android:layout_marginTop="350dp"
            android:gravity="left|center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/grFishBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/bringFishImage"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:scaleType="centerInside" />

                <LinearLayout
                    android:id="@+id/ic_bg_g3"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/action_fish_ic_gr_circle"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fishImg"
                        android:layout_width="@dimen/iccircle_img_width"
                        android:layout_height="@dimen/iccircle_img_height"

                        />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/ic_label_47"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="กลุ่มประมง"
                    android:textColor="@color/RcmoNormalLightText"
                    android:textSize="22sp"
                    pixlui:typeface="Quark-Bold.otf" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
