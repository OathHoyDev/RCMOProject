<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_total"
    tools:context="th.co.rcmo.rcmoapp.ChangePasswordActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left|center"

                >

                <com.neopixl.pixlui.components.textview.TextView
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:gravity="center|left"
                    android:text="&lt; กลับ"
                    android:layout_centerInParent="true"
                    android:id="@+id/backBtn"
                    android:textColor="@color/colorRcmoWhiteFont"
                    android:textSize="22sp" />

            </LinearLayout>                                     <!-- left action bar item -->

            <com.neopixl.pixlui.components.textview.TextView
                pixlui:typeface="Quark-Bold.otf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="เปลี่ยนรหัสผ่าน"
                android:layout_centerInParent="true"
                android:id="@+id/titleLabel"
                android:textColor="@color/colorRcmoWhiteFont"
                android:textSize="25sp" />  <!--  action bar label -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="right|center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/infoImgBtn"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_howto"
                    />
            </LinearLayout>                                     <!-- right action bar item -->



        </LinearLayout>  <!-- Action Bar Layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="350dp"
                android:layout_margin="70dp"
                android:orientation="vertical"
                android:gravity="top"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/frame_cut_conner_tran"
                android:layout_gravity="center_horizontal">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="240dp"
                    android:layout_height="35dp"

                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/input_password"
                    android:layout_marginTop="65dp">

                    <com.neopixl.pixlui.components.edittext.EditText
                        pixlui:typeface="Quark-Light.otf"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:hint="รหัสผ่านเก่า"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textColor="@color/colorRcmoGrayFont"
                        android:background="@color/colorRcmoWhiteBG"
                        android:id="@+id/oldPassInputText"
                        android:textSize="17sp" />
                </LinearLayout> <!--Input Login Password-->

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="240dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/input_password"
                    android:layout_marginTop="2dp">

                    <com.neopixl.pixlui.components.edittext.EditText
                        pixlui:typeface="Quark-Light.otf"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:hint="รหัสผ่านใหม่"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textColor="@color/colorRcmoGrayFont"
                        android:background="@color/colorRcmoWhiteBG"
                        android:id="@+id/newPassInputText"
                        android:textSize="17sp" />
                </LinearLayout> <!--Input Login Password-->

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="240dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/input_password"
                    android:layout_marginTop="2dp">

                    <com.neopixl.pixlui.components.edittext.EditText
                        pixlui:typeface="Quark-Light.otf"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:hint="ยืนยันรหัสผ่านใหม่"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textColor="@color/colorRcmoGrayFont"
                        android:background="@color/colorRcmoWhiteBG"
                        android:id="@+id/confirmPasswordText"
                        android:textSize="17sp" />
                </LinearLayout> <!--confirmPassword Password-->

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView7"
                    android:src="@drawable/btn_save"
                    android:layout_marginTop="70dp"
                    android:layout_gravity="center_horizontal" />  <!-- Login Button -->



            </LinearLayout>  <!--  tran box Layout -->

        </LinearLayout>   <!-- Input Change PasswordLayout -->
    </LinearLayout>

</RelativeLayout>
