<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainChangePassLayout"
    tools:context="th.co.rcmo.rcmoapp.ChangePasswordActivity">


    <com.neopixl.pixlui.components.textview.TextView
        pixlui:typeface="Quark-Bold.otf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="เปลี่ยนรหัสผ่าน"
        android:layout_alignParentTop="true"
        android:gravity="center|top"
        android:padding="12dp"
        android:id="@+id/titleLable"
        android:textColor="@color/RcmoNormalLightText"
        android:textSize="@dimen/textsize_xxxlarge" />


    <com.neopixl.pixlui.components.textview.TextView
        pixlui:typeface="Quark-Bold.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt; กลับ"
        android:layout_alignParentLeft="true"
        android:id="@+id/backBtn"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/RcmoNormalLightText"
        android:textSize="@dimen/textsize_xxlarge" />


    <ImageView
        android:layout_width="@dimen/size_howto"
        android:layout_height="@dimen/size_howto"
        android:src="@drawable/btn_howto"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/white_trans_cut_conner"
                    android:padding="20dp">


                    <com.neopixl.pixlui.components.edittext.EditText
                        pixlui:typeface="Quark-Light.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:hint="รหัสผ่านเก่า"
                        android:textColor="@color/RcmoNormalDarkText"
                        android:textColorHint="@color/RcmoHintText"
                        android:background="@drawable/white_cut_conner_valid"
                        android:gravity="center"
                        android:padding="5dp"
                        android:inputType="textPassword"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/textsize_normal"
                        android:textCursorDrawable="@drawable/text_cursor"
                        android:id="@+id/inputOldPassword"/>

                    <com.neopixl.pixlui.components.edittext.EditText
                        pixlui:typeface="Quark-Light.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:hint="รหัสผ่านใหม่"
                        android:textColor="@color/RcmoNormalDarkText"
                        android:textColorHint="@color/RcmoHintText"
                        android:background="@drawable/white_cut_conner_valid"
                        android:gravity="center"
                        android:padding="5dp"
                        android:inputType="textPassword"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/textsize_normal"
                        android:textCursorDrawable="@drawable/text_cursor"
                        android:id="@+id/inputPassword"/>

                    <com.neopixl.pixlui.components.edittext.EditText
                        pixlui:typeface="Quark-Light.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:hint="ยืนยันรหัสผ่านใหม่"
                        android:textColor="@color/RcmoNormalDarkText"
                        android:textColorHint="@color/RcmoHintText"
                        android:background="@drawable/white_cut_conner_valid"
                        android:gravity="center"
                        android:padding="5dp"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textSize="@dimen/textsize_normal"
                        android:textCursorDrawable="@drawable/text_cursor"
                        android:id="@+id/inputConfirmPassword"/>

                    <com.neopixl.pixlui.components.textview.TextView
                        pixlui:typeface="Quark-Bold.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_xxxxlarge"
                        android:text="บันทึก"
                        android:textColor="@color/RcmoWhiteBG"
                        android:background="@drawable/action_orange_cut_conner"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textSize="@dimen/textsize_normal"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/btnChangePass"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
