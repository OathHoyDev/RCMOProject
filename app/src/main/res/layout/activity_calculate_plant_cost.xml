<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRcmoWhiteBG"
    tools:context="th.co.rcmo.rcmoapp.CalculatePlantCostActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorRcmoBG">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/RCMOStatusBarFont"
                android:text="@string/land_detail"
                android:id="@+id/textView8"
                android:layout_gravity="center" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|right" />
        </FrameLayout>

        <TabHost
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tabHost"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/colorTab"
                    android:baselineAligned="true">

                </TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/plantLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:baselineAligned="false"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:textAppearance="@style/RCMOHeaderFont"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/RCMOHeaderFont.Green"
                            android:text="@string/plant_group"
                            android:id="@+id/textView"
                            android:textAlignment="gravity"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp" />

                        <Button
                            android:drawableLeft="@drawable/plant_icon"
                            android:drawablePadding="10dp"
                            android:layout_width="match_parent"
                            android:text="@string/rice_button"
                            android:id="@+id/rice_button"
                            android:maxWidth="300dp"
                            android:textAlignment="textStart"
                            style="@style/RCMOButton"/>

                        <Button
                            android:drawableLeft="@drawable/plant_icon"
                            android:drawablePadding="10dp"
                            android:layout_width="match_parent"
                            android:text="@string/jasmine_rice_button"
                            android:id="@+id/Jasmine_button"
                            android:maxWidth="300sp"
                            android:textAlignment="textStart"
                            style="@style/RCMOButton"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/RCMOHeaderFont.Green"
                            android:text="@string/land_detail"
                            android:id="@+id/textView2"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10sp"
                            android:textAlignment="gravity"
                            android:paddingTop="20sp"
                            android:paddingBottom="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/RCMODetailFont.Gray"
                            android:text="@string/land_size"
                            android:id="@+id/textView3"
                            android:layout_gravity="center_horizontal" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10sp">

                            <EditText
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:id="@+id/editText"
                                android:layout_weight="1"
                                android:background="@drawable/black_border_text_view"
                                android:layout_marginRight="10sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAppearance="@style/RCMOSubHeaderFont.Green"
                                android:text="@string/land"
                                android:id="@+id/textView4"
                                android:gravity="center_vertical" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/RCMODetailFont.Gray"
                            android:text="@string/province"
                            android:id="@+id/textView5"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20sp" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:id="@+id/spinner"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/grey_text_view" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="10sp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/RCMODetailFont.Gray"
                                    android:text="@string/amphor"
                                    android:id="@+id/textView7"
                                    android:layout_marginTop="20sp" />

                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="50sp"
                                    android:id="@+id/spinner3"
                                    android:layout_marginTop="10sp"
                                    android:background="@drawable/grey_text_view" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginLeft="10sp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/RCMODetailFont"
                                    android:text="@string/tumbon"
                                    android:id="@+id/textView6"
                                    android:layout_marginTop="20sp" />

                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="50sp"
                                    android:id="@+id/spinner2"
                                    android:layout_marginTop="10sp"
                                    android:background="@drawable/grey_text_view" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/livestockLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/fishingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </LinearLayout>
</RelativeLayout>
