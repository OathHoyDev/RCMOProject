<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RcmoWhiteBG">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headerLayout"
        android:background="@color/RcmoPlantBG">

        <com.neopixl.pixlui.components.textview.TextView
            pixlui:typeface="Quark-Bold.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ชนิดพืช"
            android:layout_alignParentTop="true"
            android:gravity="center|top"
            android:padding="12dp"
            android:id="@+id/titleLable"
            android:textColor="@color/RcmoNormalLightText"
            android:textSize="@dimen/textsize_xxxlarge" />


        <com.neopixl.pixlui.components.textview.TextView
            pixlui:typeface="Quark-Bold.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt; กลับ"
            android:layout_alignParentLeft="true"
            android:id="@+id/backBtn"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/RcmoNormalLightText"
            android:textSize="@dimen/textsize_xxlarge" />


        <ImageView
            android:layout_width="@dimen/size_howto"
            android:layout_height="@dimen/size_howto"
            android:src="@drawable/btn_howto"
            android:layout_alignParentRight="true"
            android:id="@+id/btnQuestion"
            android:layout_margin="10dp"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/buttonLayout"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttomImage"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:layout_marginBottom="-20dp"
            android:layout_centerHorizontal="true" />

        <com.neopixl.pixlui.components.button.Button
            pixlui:typeface="Quark-Bold.otf"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:gravity="bottom|center"
            android:paddingBottom="10dp"
            android:id="@+id/btnRecalculate"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="คำนวนใหม่"
            android:textColor="@color/RcmoWhiteBG"
            android:background="@drawable/circle_plant_cut_top_active"
            android:layout_toLeftOf="@+id/buttomImage"
            android:textSize="@dimen/textsize_xlarge" />

        <com.neopixl.pixlui.components.button.Button
            pixlui:typeface="Quark-Bold.otf"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="บันทึกผล"
            android:textColor="@color/RcmoWhiteBG"
            android:gravity="bottom|center"
            android:paddingBottom="10dp"
            android:id="@+id/btnSavePlotDetail"
            android:background="@drawable/circle_plant_cut_top"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/buttomImage"
            android:textSize="@dimen/textsize_xlarge"
            android:clickable="true"
            android:nestedScrollingEnabled="false"/>
    </RelativeLayout>

    <com.neopixl.pixlui.components.textview.TextView
        pixlui:typeface="Quark-Bold.otf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="สัปปะรดโรงงาน"
        android:textColor="@color/RcmoWhiteBG"
        android:gravity="center"
        android:padding="5dp"

        android:background="@color/RcmoPlantDarkBG"
        android:textSize="@dimen/textsize_large"
        android:id="@+id/productNameLabel"
        android:layout_below="@+id/headerLayout"
        android:layout_alignParentStart="true" />



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productNameLabel"
        android:gravity="center"
        android:id="@+id/linearLayout3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:id="@+id/itemLayout">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/imageIcon"
                android:background="@drawable/light_gray_cut_conner"
                android:layout_marginLeft="50dp"
                android:layout_centerVertical="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ImageProductLayout"
                android:layout_marginLeft="10dp">

                <com.neopixl.pixlui.components.textview.TextView
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="เนื้อที่"
                    android:id="@+id/textView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/RcmoGrayBG"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical" />

                <com.neopixl.pixlui.components.textview.TextView
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="xx"
                    android:id="@+id/lbFishpondSizeRai"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/RcmoFishBG" />

                <com.neopixl.pixlui.components.textview.TextView
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="ไร่"
                    android:id="@+id/textView2"
                    android:textColor="@color/RcmoGrayBG"
                    android:layout_alignTop="@+id/lbFishpondSizeRai"
                    android:layout_toEndOf="@+id/lbFishpondSizeRai"
                    android:layout_marginLeft="5dp" />

                <com.neopixl.pixlui.components.textview.TextView
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="xx"
                    android:id="@+id/lbFishpondSizeNgan"
                    android:textColor="@color/RcmoFishBG"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_toEndOf="@+id/textView2"
                    android:layout_marginLeft="5dp" />

                <com.neopixl.pixlui.components.textview.TextView
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="งาน"
                    android:id="@+id/textView3"
                    android:textColor="@color/RcmoGrayBG"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@+id/lbFishpondSizeNgan"
                    android:layout_toEndOf="@+id/lbFishpondSizeNgan" />

                <com.neopixl.pixlui.components.textview.TextView
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="xx"
                    android:id="@+id/lbFishpondSizeSqrWah"
                    android:textColor="@color/RcmoFishBG"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@+id/textView3"
                    android:layout_toEndOf="@+id/textView3" />

                <com.neopixl.pixlui.components.textview.TextView
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="ตร.วา"
                    android:id="@+id/textView4"
                    android:textColor="@color/RcmoGrayBG"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@+id/lbFishpondSizeSqrWah"
                    android:layout_toEndOf="@+id/lbFishpondSizeSqrWah" />

                <com.neopixl.pixlui.components.textview.TextView
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="xx"
                    android:id="@+id/lbFishpondSizeSqrMeters"
                    android:textColor="@color/RcmoFishBG"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@+id/textView4"
                    android:layout_toEndOf="@+id/textView4" />

                <com.neopixl.pixlui.components.textview.TextView
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="ตร.ม."
                    android:id="@+id/textView6"
                    android:textColor="@color/RcmoGrayBG"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@+id/lbFishpondSizeSqrMeters"
                    android:layout_toEndOf="@+id/lbFishpondSizeSqrMeters" />

                <com.neopixl.pixlui.components.textview.TextView
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="ปล่อยลูกปลา"
                    android:id="@+id/textView5"
                    android:textColor="@color/RcmoGrayBG"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true" />

                <com.neopixl.pixlui.components.textview.TextView
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="xx"
                    android:id="@+id/lbAmountFish"
                    android:textColor="@color/RcmoFishBG"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_toEndOf="@+id/textView5"
                    android:layout_toRightOf="@+id/textView5" />

                <com.neopixl.pixlui.components.textview.TextView
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="ตัว"
                    android:id="@+id/textView8"
                    android:textColor="@color/RcmoGrayBG"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@+id/lbAmountFish"
                    android:layout_toEndOf="@+id/lbAmountFish"
                    android:layout_toRightOf="@+id/lbAmountFish" />

                <com.neopixl.pixlui.components.button.Button
                    pixlui:typeface="Quark-Bold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* กดเพื่อแก้ไข"
                    android:id="@+id/btnEditLandSize"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/RcmoGrayBG"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:background="@android:color/transparent"
                    android:layout_marginRight="10dp"
                    android:layout_alignTop="@+id/textView8"
                    android:layout_alignBottom="@+id/textView8" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/ImageProductLayout">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:id="@+id/productIconBG"
                    android:background="@drawable/fish_ic_gr_circle_bg"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/productIcon"
                    android:layout_centerInParent="true"
                    android:src="@drawable/f1" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_above="@+id/buttonLayout"
        android:background="@drawable/light_gray_cut_conner"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout4">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.neopixl.pixlui.components.textview.TextView
            pixlui:typeface="Quark-Bold.otf"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="สถานที่"
            android:gravity="right"
            android:padding="5dp"
            android:textColor="@color/RcmoToastTranBG"
            android:textSize="@dimen/textsize_large"
            android:id="@+id/locationLabel"
            android:layout_below="@+id/headerLayout"
            android:layout_alignParentStart="true" />
        <com.neopixl.pixlui.components.textview.TextView
            pixlui:typeface="Quark-Bold.otf"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="แปลงของท่านเหมาะสมกับการปลูก"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:textColor="@color/RcmoProfitBG"
            android:textSize="@dimen/textsize_large"
            android:id="@+id/inputLocation"
            android:layout_below="@+id/headerLayout"
            android:layout_alignParentStart="true" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.neopixl.pixlui.components.textview.TextView
                pixlui:typeface="Quark-Bold.otf"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="ราคา"
                android:gravity="right"
                android:padding="5dp"
                android:textColor="@color/RcmoToastTranBG"
                android:textSize="@dimen/textsize_large"
                android:id="@+id/priceLabel"
                android:layout_below="@+id/headerLayout"
                android:layout_alignParentStart="true" />
            <com.neopixl.pixlui.components.textview.TextView
                pixlui:typeface="Quark-Bold.otf"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="ค่าใช้จ่ายเกินกว่ามาตรฐาน"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:textColor="@color/RcmoOrangeBG"
                android:textSize="@dimen/textsize_large"
                android:id="@+id/inputPrice"
                android:layout_below="@+id/headerLayout"
                android:layout_alignParentStart="true" />
        </LinearLayout>


    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewSummary"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/linearLayout4" />
</RelativeLayout>
