<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RcmoWhiteBG"
    android:paddingTop="20dp"
    tools:context=".ProductDetailStandardFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/buttonLayout"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttomImage"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:layout_marginBottom="-20dp"
            android:layout_centerHorizontal="true" />

        <com.neopixl.pixlui.components.button.Button
            pixlui:typeface="Quark-Bold.otf"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:gravity="bottom|center"
            android:paddingBottom="10dp"
            android:id="@+id/btnRecalculate"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="คำนวณใหม่"
            android:textColor="@color/RcmoWhiteBG"
            android:background="@drawable/circle_plant_cut_top_active"
            android:layout_toLeftOf="@+id/buttomImage"
            android:textSize="@dimen/textsize_xlarge" />

        <com.neopixl.pixlui.components.button.Button
            pixlui:typeface="Quark-Bold.otf"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="ดึงข้อมูลล่าสุด"
            android:textColor="@color/RcmoWhiteBG"
            android:gravity="bottom|center"
            android:paddingBottom="10dp"
            android:id="@+id/btnGetVariable"
            android:background="@drawable/circle_plant_cut_top"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/buttomImage"
            android:textSize="@dimen/textsize_xlarge"
            android:clickable="true"
            android:nestedScrollingEnabled="false"/>
    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:id="@+id/listView"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"/>


</RelativeLayout>
