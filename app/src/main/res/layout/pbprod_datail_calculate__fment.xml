<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PBProdDetailCalculateFment"
    android:background="@color/RcmoWhiteBG">

    <com.neopixl.pixlui.components.textview.TextView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Implement Here" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout">

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/centerImg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"

            android:background="@drawable/bottom_green"
            android:gravity="center"
            pixlui:typeface="Quark-Bold.otf"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <com.neopixl.pixlui.components.textview.TextView
        android:id="@+id/calBtn"
        android:layout_width="150dp"
        android:layout_height="match_parent"

        android:background="@drawable/btn_bg_green_cal"
        android:gravity="bottom|center"
        android:paddingBottom="5dp"
        android:text="คำนวน"
        android:textColor="@color/RcmoWhiteBG"
        android:textSize="@dimen/textsize_large"
        android:clickable="true"
        android:focusable="true"
        pixlui:typeface="Quark-Bold.otf"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/relativeLayout" />


</RelativeLayout>
