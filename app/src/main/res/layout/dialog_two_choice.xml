<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:background="@drawable/dialog_bg"
   >

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:paddingTop="20dp"

        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:orientation="vertical">

    <com.neopixl.pixlui.components.textview.TextView

        pixlui:typeface="Quark-Light.otf"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/message"
        android:textColor="@color/RcmoNormalDarkText"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:text="description"/>

        <com.neopixl.pixlui.components.textview.TextView
            pixlui:typeface="Quark-Bold.otf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/RcmoNormalDarkText"
            android:layout_marginLeft="5dp"
            android:textSize="22sp"
            android:id="@+id/title"
            android:padding="5dp"
            android:text="title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center">


            <com.neopixl.pixlui.components.textview.TextView
                pixlui:typeface="Quark-Bold.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="ยกเลิก"
                android:textColor="@color/RcmoWhiteBG"
                android:background="@drawable/action_gray_cut_left_conner"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="@dimen/textsize_xlarge"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/cancel"/>


            <com.neopixl.pixlui.components.textview.TextView
                pixlui:typeface="Quark-Bold.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="ตกลง"
                android:textColor="@color/RcmoWhiteBG"
                android:background="@drawable/action_orange_cut_right_conner"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="@dimen/textsize_xlarge"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/ok"/>
        </LinearLayout>

    </LinearLayout>








</LinearLayout>